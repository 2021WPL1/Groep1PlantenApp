<Window x:Class="PlantenApplicatie.UI.View.CreateGebruiker"
        x:Name="CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantenApplicatie.UI.View"
        mc:Ignorable="d"
        Title="CreateGebruiker" Height="502" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/AchtergrondSchermen.jpg"/>
        </Grid.Background>
        <Viewbox>
            <Grid>
                <Image HorizontalAlignment="Left" Height="80" Margin="718,0,0,0" VerticalAlignment="Top" Width="80" Source="Images/Plantify.png"/>
                <Label Content="Plantify" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Width="156" FontSize="35" BorderBrush="Black" BorderThickness="5" Height="60">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Label Content="Emailadres:" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" Height="29" Width="122" FontSize="14" FontFamily="Arial">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Label Content="Wachtwoord:" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial" Height="29" Width="122">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <TextBox x:Name="EmailAdres" Text="{Binding Path=EmailInput, Mode=TwoWay}" HorizontalAlignment="Left" Margin="185,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="29" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial"/>
                <TextBox x:Name="Wachtwoord" Text="{Binding Path=WachtwoordInput, Mode=TwoWay}" HorizontalAlignment="Left" Margin="185,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="29" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial"/>
                <Button Name="AddGebruiker" Content="Registreer" HorizontalAlignment="Center" Margin="0,418,0,0" VerticalAlignment="Top" Height="40" Width="156" FontSize="20" BorderBrush="Black" BorderThickness="2"
                Command="{Binding Path=addGebruikerCommand}" CommandParameter="{Binding ElementName=CreateWindow}">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Label Content="Rol:" HorizontalAlignment="Left" Margin="32,379,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <ComboBox ItemsSource="{Binding Rollen}" DisplayMemberPath="Omschrijving" SelectedItem="{Binding SelectedRol, Mode=TwoWay}" SelectedValuePath="Omschrijving" x:Name="rol" HorizontalAlignment="Left" Margin="185,379,0,0" VerticalAlignment="Top" Width="234" Height="30" FontSize="14" FontFamily="Arial"/>
                <Label Content="Wachtwoord&#xD;&#xA; bevestigen" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial" Height="48" Width="122">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <TextBox x:Name="Wachtwoord_Bevestigen" Text="{Binding WachtwoordBevestigen, Mode=TwoWay}" HorizontalAlignment="Left" Margin="185,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="27" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial"/>
                <Label Content="{Binding Path=SelectedError, Mode=TwoWay}" HorizontalAlignment="Left" Margin="115,65,0,0" VerticalAlignment="Top" Width="413" Height="31" Foreground="#FFF91313"/>
                <Label Content="Voornaam:" HorizontalAlignment="Left" Margin="10,256,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial" Height="29" Width="122">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Label Content="Familienaam :" HorizontalAlignment="Left" Margin="10,300,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial" Height="29" Width="122">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Label Content="VivesNr" HorizontalAlignment="Left" Margin="10,343,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial" Height="29" Width="122">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FFC7FF00" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <TextBox x:Name="AchterNaam" Text="{Binding AchterNaamInput, Mode=TwoWay}" HorizontalAlignment="Left" Margin="185,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="29" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial"/>
                <TextBox x:Name="VoorNaam" Text="{Binding VoorNaamInput, Mode=TwoWay}" HorizontalAlignment="Left" Margin="185,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="29" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial"/>
                <TextBox x:Name="VivesNr" Text="{Binding VivesNrInput, Mode=TwoWay}" HorizontalAlignment="Left" Margin="185,343,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="29" BorderBrush="Black" BorderThickness="2" FontSize="14" FontFamily="Arial"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
