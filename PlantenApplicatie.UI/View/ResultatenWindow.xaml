                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <Label x:Name="lblType" Content="" HorizontalAlignment="Left" Margin="238,150,0,304" Width="374" BorderBrush="Black" BorderThickness="1,1,1,1" HorizontalContentAlignment="Center" Height="28"/>
